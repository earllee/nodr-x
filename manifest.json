{
  "manifest_version": 2,

  "name": "Nodr-x",
  "description": "This extension records a browsing session.",
  "version": "1.0",
  "background": { "page" : "background.html"},
  "content_scripts": [ 
	{
    "matches": ["http://*/*","https://*/*"], "js": ["jquery-2.0.3.js", "content_scripts.js"]
	}
  ],
  "content_security_policy": "script-src 'self' https://www.nodr.me; object-src 'self'",
  "permissions": [
    "history", "tabs", "http://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "38" : "icon38.png"
    }
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" }
}
